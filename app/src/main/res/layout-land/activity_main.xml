<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header with reduced height for landscape -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="20dp">

            <!-- Left side: Back button and route -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="Back"
                    android:padding="6dp"
                    android:src="@drawable/ic_back_arrow"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/tvDepartureCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="DEL"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="âœˆ"
                    android:textColor="#FFA726"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvArrivalCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="BLR"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Right side: Date and duration -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 December 2022"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="04h 30m â€¢ ðŸ‘¤ 01 Adult"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="12dp"
                android:contentDescription="Edit"
                android:padding="6dp"
                android:src="@drawable/ic_edit"
                app:tint="@android:color/white" />
        </LinearLayout>
    </FrameLayout>

    <!-- Filters -->
    <HorizontalScrollView
        android:id="@+id/filterScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnHighToLow"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="8dp"
                android:text="High to Low"
                android:textAllCaps="false"
                android:textColor="@color/purple_500"
                android:textSize="12sp"
                app:strokeColor="@android:color/white"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btnLowToHigh"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="8dp"
                android:text="Low to High"
                android:textAllCaps="false"
                android:textColor="@color/purple_500"
                android:textSize="12sp"
                app:strokeColor="@android:color/white"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btnAirlineType"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginEnd="8dp"
                android:text="Airlines Type"
                android:textAllCaps="false"
                android:textColor="@color/purple_500"
                android:textSize="12sp"
                app:strokeColor="@android:color/white"
                app:strokeWidth="1dp" />

            <ImageButton
                android:id="@+id/btnFilter"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/filter_button_background"
                android:contentDescription="Filter"
                android:src="@drawable/ic_filter"
                app:tint="@android:color/white" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView with Grid layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFlightList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingTop="4dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        tools:itemCount="2"
        tools:listitem="@layout/item_flight" />

</LinearLayout>